<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InputReportTeknisiActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:textSize="20dp"
                        android:text="MATERIAL"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:text="Drop wire"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/inputDropwire"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:text="Drop core"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/inputDropcore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:inputType="number" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:text="UTP"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/inputUTP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:text="PCV"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/inputPCV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:text="Tray Cable"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/inputTrayCabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:text="Breker"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/inputBreker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:text="S-clam"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/inputSclam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:text="Clam Hook"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/inputClamhook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:text="Patchcore"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/inputPatchcore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:text="Roster"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/inputRoster"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:text="SOC"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/inputSOC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:text="PictTail"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/inputPictTail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:text="protector sleve"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/inputps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"/>

                        <Button
                            android:id="@+id/simpan_material"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Simpan"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namagrup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_name"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailteknisi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/cardview_dark_background"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/emailteknisi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/cardview_dark_background"
                android:textSize="12dp"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/in_belum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2.9"
            android:contentDescription="@string/app_name"
            android:src="@drawable/iconred" />

        <ImageView
            android:id="@+id/in_proses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2.9"
            android:contentDescription="@string/app_name"
            android:src="@drawable/iconyellow" />
        <ImageView
            android:id="@+id/in_selesai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2.9"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icongreen" />

        <ImageView
            android:id="@+id/in_ayahab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2.9"
            android:contentDescription="@string/app_name"
            android:src="@drawable/alert" />

        <ImageView
            android:id="@+id/delete_grup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.9"
            android:contentDescription="@string/app_name"
            android:src="@drawable/pdelete" />

    </LinearLayout>
</android.support.v7.widget.CardView>
